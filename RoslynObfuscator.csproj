    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="2.10" />
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20214.1" />
